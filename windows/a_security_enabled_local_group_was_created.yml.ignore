- name: "A security-enabled local group was created"
  severity: "Low"
  description: "This event generates every time a new security-enabled (security) local group was created"
  solution: ""
  category: "Threat Protection"
  tactic: ""
  reference:
    - "https://docs.microsoft.com/en-us/windows/security/threat-protection/auditing/event-4731"
  frequency: 60
  cache:
    - allOf:
        - field: "logx.wineventlog.event_id"
          operator: "=="
          value: 4731
      timeLapse: 60
      minCount: 1
      save:
        - field: "logx.wineventlog.event_data.SubjectUserName"
          alias: "SourceUser"
        - field: "logx.wineventlog.event_data.TargetUserName"
          alias: "DestinationUser"
        - field: "logx.wineventlog.host.name"
          alias: "SourceHost"
